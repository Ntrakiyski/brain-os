# ============================================================================
# BrainOS MCP Server - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to git
# ============================================================================

# ============================================================================
# REQUIRED API KEYS
# ============================================================================

# ----------------------------------------------------------------------------
# Neo4j Database (REQUIRED)
# ----------------------------------------------------------------------------
# Local Development: bolt://host.docker.internal:7687 (Docker Desktop)
# Production: bolt://your-neo4j-service-name:7687 (Coolify internal)
# Neo4j Aura (Cloud): neo4j+s://xxxxx.databases.neo4j.io
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password-here

# ----------------------------------------------------------------------------
# Groq API (REQUIRED - Fast Actions)
# ----------------------------------------------------------------------------
# Get API key from: https://console.groq.com/keys
# Cost: ~$0.10 per 1M tokens
# Used for: Classification, extraction, routing (~100ms response)
GROQ_API_KEY=your-groq-api-key-here
GROQ_QUICK_MODEL=openai/gpt-oss-120b

# ----------------------------------------------------------------------------
# OpenRouter API (REQUIRED - Deep Thinking)
# ----------------------------------------------------------------------------
# Get API key from: https://openrouter.ai/keys
# Cost: ~$1-5 per 1M tokens (varies by model)
# Used for: Research, reasoning, synthesis, creative work (~3-10s response)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_RESEARCHING_MODEL=anthropic/claude-sonnet-4
OPENROUTER_THINKINIG_MODEL=anthropic/claude-sonnet-4
OPENROUTER_CREATIVE_MODEL=anthropic/claude-sonnet-4
OPENROUTER_PLANNING_MODEL=anthropic/claude-opus-4

# ============================================================================
# OPTIONAL INTEGRATIONS
# ============================================================================

# ----------------------------------------------------------------------------
# Email Notifications (OPTIONAL - N8N Webhook)
# ----------------------------------------------------------------------------
# Used by: send_email, send_templated_email, test_email_webhook tools
# EMAIL_WEBHOOK_URL=https://n8n.trakiyski.work/webhook/your-webhook-id
# EMAIL_AUTHORIZATION=your-authorization-token
EMAIL_WEBHOOK_URL=
EMAIL_AUTHORIZATION=

# ----------------------------------------------------------------------------
# Phoenix Cloud Observability (OPTIONAL)
# ----------------------------------------------------------------------------
# Open-source LLM tracing and evaluation
# Get free account at: https://phoenix.arize.com/
# Benefits: Real-time tracing, performance monitoring, interactive debugging
PHOENIX_COLLECTOR_ENDPOINT=
PHOENIX_API_KEY=

# ----------------------------------------------------------------------------
# Obsidian Integration (OPTIONAL)
# ----------------------------------------------------------------------------
# Deploy Obsidian MCP server separately (https://github.com/YuNaga224/obsidian-memory-mcp)
# Default: https://obsidian-mcp.trakiyski.work/mcp (already deployed)
# Override with: OBSIDIAN_MCP_URL=http://localhost:8001/mcp
OBSIDIAN_MCP_URL=https://obsidian-mcp.trakiyski.work/mcp

# ----------------------------------------------------------------------------
# MCP Server Configuration (OPTIONAL)
# ----------------------------------------------------------------------------
# Port for HTTP transport (default: 9131)
MCP_PORT=9131
